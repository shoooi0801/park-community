<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>
	<h3>
		登録情報
		<%= link_to "編集する", edit_customers_path, class: "btn btn-success ml2" %>
	</h3>
	<table class="customer_info mb3">
		<thead>
		</thead>
		<tbody>
			<tr>
				<td>名前</td>
				<td colspan="2"><%= @customer.name %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @customer.email %></td>
			</tr>
			<tr>
				<td>コメント</td>
				<td colspan="2"><%= @customer.introduction %></td>
			</tr>
		</tbody>
	</table>
</section>