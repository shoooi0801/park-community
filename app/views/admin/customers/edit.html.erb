<h2><%= @customer.name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: customers_admin_show_path do |f| %>

   <div class="form_group">
     <label for="customer_id">会員ID</label>
     <%= @customer.id %>
   </div>

   <div class="form_group">
     <label for="customer_name">氏名</label>
     <%= f.text_field :name %> <%= f.text_field :name %>
   </div>

  <div class="form_group">
     <label for="customer_email">メールアドレス</label>
     <%= f.text_field :email %>
  </div>


  <div class="is_deleted">
    <div>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, '退会', value: true %>
    </div>
    <div>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '有効', value: false %>
    </div>
  </div>

    <div class="form_group">
     <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
<% end %>