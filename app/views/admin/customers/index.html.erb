<h2>会員一覧</h2>

<table class="customers">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <% @customers.each do |customer| %>
    <tbody>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, customers_admin_show_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted %>
        退会
        <% else %>
        有効
        <% end %>
        </td>
     </tr>
    </tbody>
  <% end %>
</table>

